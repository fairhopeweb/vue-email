{
  "name": "@mysigmail/vue-email-monorepo",
  "version": "0.0.0",
  "private": "true",
  "author": {
    "name": "Anton Reshetov",
    "url": "https://github.com/antonreshetov"
  },
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -r --filter='./packages/client' run dev",
